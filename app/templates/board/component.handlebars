<div class="component component-ranking">
    <div class="hd">
        <h3>{{config.title}}</h3>
    </div>
    <div class="bd">
        <ol class="component-ranking-list">
          {{#each data}}
              <li><a class="component-ranking-item" href="{{href}}">{{title}}</a></li>
          {{/each}}
        </ol>
    </div>
    {{#if config.showMore}} 
        <div class="showmore"><a href="{{config.link}}">More</a></div>
    {{/if}}
</div>

